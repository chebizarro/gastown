GT_RIG=gastown

# Build metadata (optional)
GT_VERSION=dev
GT_COMMIT=local
GT_BUILD_TIME=1970-01-01T00:00:00Z

# ---------------------------------------------------------------------------
# Infrastructure ports (host-side)
# ---------------------------------------------------------------------------
GT_RELAY_PORT=7777
GT_BLOSSOM_PORT=8005
# GT_FLOTILLA_PORT=1847
# GT_OLLAMA_PORT=11434

# Flotilla build context (only needed with --profile ui)
# GT_FLOTILLA_PATH=../flotilla

# MCP bearer token (required for production; if empty, MCP allows all)
GT_MCP_TOKEN=change-me

# API-mode agent loop identity + agent config selection
GT_AGENT_ROLE=witness
GT_AGENT_INSTANCE=agent1
GT_AGENT_ID=claude-api

# Optional: seed initial task so agentloop does work immediately
# GT_AGENT_TASK="Run patrol and summarize current state."
# Optional: poll for work via `gt prime`
# GT_AGENT_PRIME_INTERVAL=30s

# LLM creds used by docs/examples/agents-api.json
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Optional migration/sunset flags
GT_EVENTS_LOCAL=1
GT_FEED_CURATOR=1
GT_CONVOY_LOCAL=1
